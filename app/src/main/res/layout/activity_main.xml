<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeremyhaines.quizapp.MainActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/question_1_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_1"/>

            <RadioGroup
                android:id="@+id/question_1_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_1_first_logo_radio"
                    android:text=""
                    style="@style/question_radio_button_style"
                    />

                <RadioButton
                    android:id="@+id/question_1_second_logo_radio"
                    android:text=""
                    style="@style/question_radio_button_style"
                    />

                <RadioButton
                    android:id="@+id/question_1_third_logo_radio"
                    android:text=""
                    style="@style/question_radio_button_style"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_1_first_logo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/htc"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_1_second_logo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/toyota_logo"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_1_third_logo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/ebay"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_2_container"
            style="@style/question_container_style">
            <TextView
                style="@style/question_style"
                android:text="@string/question_2"/>

            <RadioGroup
                android:id="@+id/question_2_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_2_first_logo_radio"
                    android:text=""
                    style="@style/question_radio_button_style"
                    />

                <RadioButton
                    android:id="@+id/question_2_second_logo_radio"
                    android:text=""
                    style="@style/question_radio_button_style"
                    />

                <RadioButton
                    android:id="@+id/question_2_third_logo_radio"
                    android:text=""
                    style="@style/question_radio_button_style"
                    />

            </RadioGroup>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        style="@style/radio_group_linear_layout_style">

                        <ImageView
                            android:id="@+id/question_2_first_logo"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/newapplelogo"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/radio_group_linear_layout_style">

                        <ImageView
                            android:id="@+id/question_2_second_logo"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/originalapplelogo"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/radio_group_linear_layout_style">

                        <ImageView
                            android:id="@+id/question_2_third_logo"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/oldapplelogo"/>

                    </LinearLayout>
                </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_3_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_first_checkbox"
                        android:text=""
                        style="@style/question_checkbox_style"
                        />

                    <ImageView
                        android:id="@+id/question_3_first_checkbox_logo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/walmart"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_second_checkbox"
                        android:text=""
                        style="@style/question_checkbox_style"
                        />

                    <ImageView
                        android:id="@+id/question_3_second_checkbox_logo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/amazon_logo"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_third_checkbox"
                        android:text=""
                        style="@style/question_checkbox_style"
                        />

                    <ImageView
                        android:id="@+id/question_3_third_checkbox_logo"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/bing_logo"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_4_container"
            style="@style/question_container_style">
            <TextView
                style="@style/question_style"
                android:text="@string/question_4"/>

            <ImageView
                android:id="@+id/question_4_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/microsoft"/>

            <EditText
                android:id="@+id/question_4_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""/>
        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:onClick="checkQuiz"/>

    </LinearLayout>
</ScrollView>
